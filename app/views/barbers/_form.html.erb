<%= form_for @customer do |f| %>
<%= f.label :name %>
<%= f.text_field :name %> <br> <br>

<%= f.label :if_available %>
<%= f.text_field :if_available %> <br> <br>

<%= f.label :accept_cash %>
<%= f.text_field :accept_cash %> <br> <br>

<%= f.label :accept_card %>
<%= f.text_field :accept_card %> <br> <br>

<%= f.label :email %>
<%= f.text_field :email %> <br> <br>

<%= f.label :password %>
<%= f.text_field :password %> <br> <br>

<%= f.label :cell %>
<%= f.number_field :cell %> <br> <br>

<%= f.label :barber_shop_id %>
<%= f.collection_select :barber_shop_id, @barber_shops, :id, :name %> <br> <br>

<%= f.label :service_id, "Specialty: " %>
<%= f.collection_select :service_id, @services, :id, :name %> <br> <br>

<%= f.submit%>

<% end %>