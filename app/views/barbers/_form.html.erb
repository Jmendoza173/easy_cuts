<%= form_for @barber do |f| %>
<%= f.label :name %>
<%= f.text_field :name %> <br> <br>

<%= f.label :if_available %>
<%= f.select :if_available, options_for_select([["Select One", ""], ["Yes", true], ["No", false]]) %> <br> <br>

<%= f.label :accept_cash %>
<%= f.select :accept_cash, options_for_select([["Select One", ""], ["Yes", true], ["No", false]])%> <br> <br>

<%= f.label :accept_card %>
<%= f.select :accept_card, options_for_select([["Select One", ""], ["Yes", true], ["No", false]])%> <br> <br>

<%= f.label :email %>
<%= f.text_field :email %> <br> <br>

<%= f.label :password %>
<%= f.password_field :password %> <br> <br>

<%= f.label :cell %>
<%= f.number_field :cell %> <br> <br>

<%= f.label :barber_shop_id %>
<%= f.collection_select :barber_shop_id, @shops, :id, :name %> <br> <br>

 <%# f.label :specialty, "Specialty: " %>
 <%# f.collection_select :specialty, @services, :hair, :hair %>
<%= f.submit%>

<% end %>