<%= form_for @appointment do |f|%>
    <table>
        <tr>
            <td> <%=f.label :date%> </td>
            <td> <%=f.date_field :date, min: Date.today+1%> </td>
        </tr>
        <tr>
            <td> <%=f.label :time%> </td>
            <td> <%=f.time_field :time%> </td>
        </tr>
        <tr>
            <td> <%=f.label :service_id, "Choose hair service:"%> </td>
            <td> <%= f.collection_select :service_id, @hairs, :id, :hair %>
            </td>
        </tr>
        <tr>
            <td> <%=f.label :service_id, "Choose Shape up service:"%> </td>
            <td> <%= f.collection_select :service_id, @shape_ups, :id, :shape_up %>
            </td>
        </tr>
        <tr>
            <td> <%=f.label :service_id, "Choose Facial service:"%> </td>
            <td> <%= f.collection_select :service_id, @facials, :id, :facial %>
            </td>
        </tr>
        <tr>
            <td> <%=f.label :service_id, "Choose Facial Hair service:"%> </td>
            <td> <%= f.collection_select :service_id, @facial_hairs, :id, :facial_hair %>
            </td>
        </tr>
        <tr>
            <td> <%=f.label :service_id, "Choose Extra service:"%> </td>
            <td> <%= f.collection_select :service_id, @extras, :id, :extra %>
            </td>
        </tr>
        <tr>
            <td> <%=f.label :customer_id%> </td>
            <td> <%=f.collection_select :customer_id, @customers, :id, :name%> </td>
        </tr>
        <tr>
            <td> <%=f.label :barber_id%> </td>
            <td> <%=f.collection_select :barber_id, @barbers, :id, :name%> </td>
        </tr>
        <tr>
            <td> <%=f.submit%> </td>
            <td></td>
        </tr>
    </table>
<%end%>