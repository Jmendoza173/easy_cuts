<h3>Log in</h3>
<% if flash[:notification]%>
  <%=flash[:notification]%>
<%end%>
<%= form_tag confirmation_path do %>
  <ul>
    <li>
      <%= label_tag :email %>
      <%= text_field_tag :email %>
    </li>
    <li>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </li>
  </ul>
  <%= submit_tag "Log in" %>
<% end %>
<%=button_to "Cancel", profile_path(), method: :get%>