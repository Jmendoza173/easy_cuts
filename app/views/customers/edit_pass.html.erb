<h1><%=link_to "Profile", profile_path%></h1>
<h2>Security Setting</h2>

<p>Email: <%=@customer.email%><%=button_to "Edit", email_change_path(@customer), method: :get %></p>
<p><%= form_for @customer do |f|%><%=f.label :password, "Password: "%><%=f.password_field :password%>
<%=f.submit "Update"%><%end%></p>
<br>
<%= form_for @customer, method: :delete do |f| %>
<%=f.label "Delete your Account: "%><%= f.submit "Delete" %><%end%>